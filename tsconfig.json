{
  "compilerOptions": {
    "paths": {
      "$src": ["./src"],
      "$src/*": ["./src/*"],
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "$shadcnComponents": ["./src/lib/shadcnComponents"],
      "$shadcnComponents/*": ["./src/lib/shadcnComponents/*"]
    },
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src/**/*.ts"]
}
